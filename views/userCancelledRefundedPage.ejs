<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cancellation</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/stylesheets/userViewBookings.css">
    <script src="https://kit.fontawesome.com/58a6fcb787.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav>
        <a href="/users/dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i>
        </a>
    </nav>
    <main>
        <div class="container">
            <h1>Cancelled Bookings</h1>
            <div id="bookingsList">
                <% cancellations.reverse().forEach(booking=> { %>
                    <div class="booking">
                        <div class="booking-details">
                            <h2>Booking ID: <%= booking.cancellationId %>
                            </h2>
                            <p>Item: <span>
                                    <%= booking.newspaperName %>
                                </span></p>
                            <p>Cancelled Date: <span>
                                    <%= booking.createdAt %>
                                </span></p>
                            <p>Publishing Date: <span>
                                    <%= booking.publishingDate %>
                                </span></p>
                            <p>Price: <span>
                                    <%= booking.price %>
                                </span></p>
                            <span class="cancelled-label">Cancelled</span>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <div class="container">
            <h1>Refunds</h1>
            <div id="bookingsList">
                <% refunds.reverse().forEach(booking=> { %>
                    <div class="booking">
                        <div class="booking-details">
                            <h2>Booking ID: <%= booking.cancellationId %>
                            </h2>
                            <p>Item: <span>
                                    <%= booking.newspaperName %>
                                </span></p>
                            <p>Booking Date: <span>
                                    <%= booking.createdAt %>
                                </span></p>
                            <p>Publishing Date: <span>
                                    <%= booking.publishingDate %>
                                </span></p>
                            <p>Refunded Amount: <span>
                                    <%= booking.price %>
                                </span></p>
                            <span class="refunded-label">Refunded</span>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </main>
</body>

</html>