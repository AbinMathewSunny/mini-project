<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publisher</title>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	<link rel="stylesheet" href="/stylesheets/publisherDashboard.css">
    <link rel="stylesheet" href="/stylesheets/download-link.css">
</head>
<body>
<%- include('partials/publisher-sidebar.ejs') %>

<section id="content">
		
<%- include('partials/publisher-navbar.ejs') %>

	<main>
        
		<div class="table-data">
			<div class="order">
				<div class="head">
					<h3>Recent Bookings</h3>
					
				</div>
				<table>
					<thead>
						<tr>
                            <th>Booking Date</th>
							<th>Publishing Date</th>
							<th>Slot Id</th>
                            <th>file</th>
							<th>Action</th>
						</tr>
					</thead>

					<tbody>
                        <% if (bookings.length > 0) { %>
                          <% bookings.reverse().forEach(booking => { %>
                            <tr>
                              <td><%= booking.createdAt %></td>
                              <td><%= booking.publishingDate %></td>
                              <td><%= booking.slotId %></td>
                              <td>
                                <% if (booking && booking.file) { %>
                                  <a href="data:<%= booking.file.contentType %>;base64,<%= booking.file.data.toString('base64') %>" download="ad.jpeg" class="download-link">
                                    <i class="fas fa-download"></i>
                                    <span class="visually-hidden">Download PDF</span>
                                  </a>
                                <% } else { %>
                                  <p>No file uploaded</p>
                                <% } %>
                              </td>
                              <td>
                                <form action="/publisher/view-layout/<%= booking.newspaperName %>/<%= booking.publishingDate %>" method="POST">
                                  <button type="submit" class="btn-danger">View</button>
                                </form>
                              </td>
                            </tr>
                          <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="2">No new requests.</td>
                          </tr>
                        <% } %>
                      </tbody>
				</table>
			</div>
		</div>
	</main>
</section>
<script src="/javascripts/publisherDashboard.js"></script>
</body>
</html>